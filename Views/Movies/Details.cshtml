@model WatchParty.DTOs.MovieDTO

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="280" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
    </dl>

    <div class="video-frame">
        <video style="width:90%; height:550px;" controls>
            @* <source src= Model.VideoPath type="video/mp4" /> *@
            <source src="@Url.Content($"~/videos/{Model.VideoPath}.mp4")" type="video/mp4" />
        </video>
    </div>

    <h5>Categories : </h5>
    @if (Model.Categories.Count <= 0)
    {
        <div>There are no categories in for this movie yet.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.First().Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <h5>Staring : </h5>
    @if (Model.Actors.Count <= 0)
    {
        <div>There are no actors in for this movie yet.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Actors.First().FullName)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Actors)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-controller="Actors" asp-action="Details" asp-route-id="@item.ID"><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="100" /></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.ID" class="btn btn-danger">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
