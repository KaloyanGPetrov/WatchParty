@model WatchParty.DTOs.MovieDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="300" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VideoPath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoPath)
        </dd>
    </dl>

    <div class="video-frame">
        <video style="width:250px; height:150px;" controls>
            <source src="@Url.Content($"~/videos/{Model.VideoPath}.mp4")" type="video/mp4" />
        </video>
    </div>

    <h5>Categories : </h5>
    @if (Model.Categories.Count <= 0)
    {
        <div>There are no categories in for this movie yet.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories.First().Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <h5>Staring : </h5>
    @if (Model.Actors.Count <= 0)
    {
        <div>There are no actors in for this movie yet.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Actors.First().FirstName)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Actors.First().LastName)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Actors)
                {
                    <tr>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="300" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
