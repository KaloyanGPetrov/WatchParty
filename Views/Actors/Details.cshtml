@model WatchParty.DTOs.ActorDTO

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/websiteStyle.css" asp-append-version="true" />

<div class="container">
    <h2>Actor Details</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Html.DisplayFor(model => model.ImageUrl)" class="img-thumbnail" width="200" />
                </dd>
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
                <dt class="col-sm-3">Age</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>
            </dl>
            <h5>Starring In:</h5>
            @if (Model.Movies.Count <= 0)
            {
                <div>There are no movies for this actor yet.</div>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Movies)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.ID">
                                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-thumbnail" width="100" />
                                    </a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.ID" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>